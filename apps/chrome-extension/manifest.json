{
  "manifest_version": 3,
  "name": "Xmarket - Bet from Twitter",
  "version": "0.1.0",
  "description": "Place Polymarket bets directly from Twitter/X",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://gamma-api.polymarket.com/*",
    "https://*.polymarket.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "src/content/content-script.ts"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open Xmarket"
  },
  "icons": {
    "16": "public/icons/icon-16.png",
    "32": "public/icons/icon-32.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/inject/provider-proxy.ts"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}
