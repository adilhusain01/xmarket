// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  xUserId       String?       @unique @map("x_user_id") @db.VarChar(64)
  xUsername     String?       @map("x_username") @db.VarChar(64)
  name          String?
  email         String?       @unique
  emailVerified DateTime?     @map("email_verified")
  image         String?
  walletAddress String?       @map("wallet_address") @db.VarChar(42)
  balanceUsdc   Decimal       @default(0) @map("balance_usdc") @db.Decimal(18, 6)
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  bets          Bet[]
  transactions  Transaction[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Bet {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  marketId    String   @map("market_id") @db.VarChar(66)
  marketTitle String   @map("market_title") @db.Text
  side        String   @db.VarChar(3) // 'yes' or 'no'
  amountUsdc  Decimal  @map("amount_usdc") @db.Decimal(18, 6)
  shares      Decimal? @db.Decimal(18, 6)
  price       Decimal? @db.Decimal(10, 6)
  tweetId     String?  @map("tweet_id") @db.VarChar(64)
  orderId     String?  @map("order_id") @db.VarChar(66)
  status      String   @db.VarChar(20) // pending, filled, failed, sold
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([marketId])
  @@index([status])
  @@map("bets")
}

model Transaction {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  type       String   @db.VarChar(20) // deposit, withdrawal, bet, win, loss
  amountUsdc Decimal  @map("amount_usdc") @db.Decimal(18, 6)
  txHash     String?  @map("tx_hash") @db.VarChar(66)
  metadata   Json?    // Additional data (bet_id, market_id, etc.)
  createdAt  DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@map("transactions")
}

// Store last shown markets for context-aware betting
model UserContext {
  id          String   @id @default(uuid())
  xUserId     String   @map("x_user_id") @db.VarChar(64)
  lastMarkets Json     @map("last_markets") // Array of last 3 markets shown
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@unique([xUserId])
  @@map("user_contexts")
}

// NextAuth models
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
